<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yesnoScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg"
    tools:context="com.axiomcorp.hellodoc.YesNoActivity"
    tools:targetApi="ice_cream_sandwich">

    <TextView
        android:id="@+id/Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="#FF000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/yesopt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goYes"
        android:text="@string/yes_opt"
        android:layout_marginLeft="93dp"
        android:layout_marginStart="93dp"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/noopt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goNo"
        android:text="@string/no_opt"
        android:layout_alignBaseline="@+id/yesopt"
        android:layout_alignBottom="@+id/yesopt"
        android:layout_toRightOf="@+id/yesopt"
        android:layout_toEndOf="@+id/yesopt" />

</RelativeLayout>
